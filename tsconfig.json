{
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "./dist",
    "noImplicitAny": true,
    "declaration": true,
    "declarationDir": "./types",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "experimentalDecorators": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["**/*.stories.tsx", "**/__snapshots__/*", "**/test/*", "src/**/*.config.js"]
}
