{
  "name": "bo1ler",
  "version": "0.0.1",
  "description": "Component Library",
  "main": "index.js",
  "scripts": {
    "commitlint": "commitlint -c -e",
    "start": "start-storybook -p 1337",
    "build": "NODE_ENV=production webpack --config webpack.prod.js",
    "build:types": "rimraf types && tsc --emitDeclarationOnly",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "format": "npm run format:eslint && npm run format:prettier",
    "lint:eslint": "eslint 'src/**' --ext .ts,.tsx",
    "format:eslint": "eslint 'src/**' --ext .ts,.tsx --fix",
    "lint:prettier": "prettier \"**/*.{ts,tsx}\" --check",
    "format:prettier": "prettier \"**/*.{ts,tsx}\" --write",
    "build-storybook": "build-storybook",
    "doc:install": "deven-documentation-skeleton install",
    "doc:check": "deven-documentation-skeleton check",
    "doc:update": "deven-documentation-skeleton update",
    "compile:icons": "rimraf src/foundation/icons && svgo -f assets/icons -o src/foundation/icons --config svgo.config.js && node ./utils/create-icons-index.mjs && prettier ./src/foundation/icons/index.ts --write",
    "normalize:tokens": "node --experimental-json-modules figma-design-tokens/config/normalize-token-json.mjs && prettier ./figma-design-tokens/input/tokens.normalized.json --write",
    "style-dictionary": "rimraf src/foundation/scss && style-dictionary build --config ./figma-design-tokens/config/style-dictionary.config.js && prettier ./src/foundation/scss/*.scss --write",
    "generate-index-scss": "node figma-design-tokens/config/generate-index-scss.mjs && prettier ./src/foundation/scss/index.scss --write",
    "tokens:generate": "npm run normalize:tokens && npm run style-dictionary && npm run generate-index-scss"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/orivaa/BO1LER.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/orivaa/BO1LER/issues"
  },
  "homepage": "https://github.com/orivaa/BO1LER#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/plugin-proposal-decorators": "^7.20.7",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@commitlint/cli": "17.4.2",
    "@commitlint/config-conventional": "17.4.2",
    "@storybook/addon-actions": "^6.5.15",
    "@storybook/addon-essentials": "^6.5.15",
    "@storybook/addon-links": "^6.5.15",
    "@storybook/builder-webpack5": "^6.5.15",
    "@storybook/manager-webpack5": "^6.5.15",
    "@storybook/react": "^6.5.0",
    "@types/react": "^18.0.27",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "babel-loader": "^9.1.2",
    "chalk": "^5.2.0",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.3",
    "deven-documentation-skeleton": "^1.5.0",
    "eslint": "^8.32.0",
    "eslint-plugin-lit": "^1.8.2",
    "eslint-plugin-lit-a11y": "^1.1.0-next.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-storybook": "^0.6.10",
    "eslint-plugin-wc": "^1.4.0",
    "eslint-webpack-plugin": "^3.2.0",
    "fork-ts-checker-webpack-plugin": "^7.3.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "lodash.camelcase": "4.3.0",
    "lodash.kebabcase": "4.1.1",
    "mini-css-extract-plugin": "^2.7.2",
    "prettier": "2.8.3",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "release-please": "^15.1.1",
    "sass": "^1.57.1",
    "sass-loader": "^13.2.0",
    "style-dictionary": "^3.7.2",
    "style-loader": "^3.3.1",
    "svgo": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "@lit-labs/react": "^1.1.1",
    "lit": "^2.6.1"
  }
}
